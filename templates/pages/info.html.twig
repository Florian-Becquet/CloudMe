
{% for data in info %}
    <h3 class="lead text-center mb-5"> Données du service : {{ data.headline }}</h3>
 
    <div class="container ">
    <div class="row custyle">
    <div class="col-md-12 table-responsive mb-5">
    <table class="table table-striped custab mx-auto" style="width:90%">
    <thead> 
    
        <tr>
            <th></th>
            <th>Nom</th>
            <th>CPU</th>
            <th>RAM</th>
            <th>Espace disque</th>
            <th>Protection</th>
            <th>Replication</th>
            <th>Backup</th>
            <th>IP</th>
            <th>Status</th>
            
            <th class="">Options</th>
        </tr>
    </thead>
            <tr>
                <td id="imgRetention">
                <img  title="voir les sauvegardes de données"src="https://img.icons8.com/flat_round/24/000000/plus.png">
                </td>
            
            
                <td>{{ data.name }}</td>
                <td>{{data.cpu}}</td>
                <td>{{ data.ram }}</td>
                <td>{{ data.space }}</td>
                <td><i id="protection"></i></td>
                <td><i id="replication"></i></td>
                <td>{{data.backup}}</td>
                <td>{{data.ip}}</td>
                <td>Running</td>

                <td class="text-center">
                <a class='btn btn-success btn-xs pl-2 pr-2' title="Lancer le serveur"href="#"><span class="fas fa-play"></span></a> 
                <a href="#" title="Arreter le serveur"class="btn btn-danger btn-xs pl-2 pr-2"><span class="fas fa-stop"></span></a>
                <div class="btn-group dropup">
                        <a class='btn btn-warning btn-xs pl-2 pr-2 ml-1' data-toggle="dropdown"  title="Options"href="#"><i class="fa fa-caret-up"  style="color:white;"></i></a>
                        <div class="dropdown-menu ">
                             <a class='btn btn-info btn-xs pl-2 pr-2 ml-4'   title="Options"href="#"><i class="fas fa-cog "  style="color:white;"></i></a>
                             <a class='btn btn-primary btn-xs pl-2 pr-2 ml-2'   title="Options"href="#"><i class="fas fa-cog "  style="color:white;"></i></a>
                             <a class='btn btn-dark btn-xs pl-2 pr-2 ml-2'   title="Options"href="#"><i class="fas fa-cog "  style="color:white;"></i></a>
                        </div>
                </div>
                </td>
            </tr>
          
    </table>
   
    </div>
      
    </div>
</div>
     <div id="stockage" style="display:none;">
        <span id="cpu">{{ data.cpu }}</span>
        <span id="ram">{{ data.ram }}</span>
        <span id="space">{{ data.space }}</span>
        <span id="prot">{{ data.protection }}</span>
        <span id="repli">{{ data.replication }}</span>
    </div>

     
 <div class="card" id="retentionData"style="width: 18rem; z-index:2; position:absolute; top:37%; left:16%; display:none;">
  <div class="card-header text-center">
    <h3 class="lead">Rétentions des données</h3>
  </div>
  <table class="card-table table">
    <thead>
      <tr>
        <th class="text-center" scope="col-6">Listes des sauvegardes</th>
       
      </tr>
    </thead>
    <tbody>
    {% for data in retention %}
      <tr>
        <td>{{ data }}</td>
       
      </tr>
   {% endfor %}
      
    </tbody>
  </table>
</div>
<div class="row">
      

        <div class="col-md-4 col-sm-12 text-center">
        <h4>CPU</h4>
        
        <canvas id="fromageCpu"></canvas>
        </div>
         <div class="col-md-4 col-sm-12 text-center">
         <h4>RAM</h4>
      
        <canvas id="fromageRam"></canvas>
        </div>
         <div class="col-md-4 col-sm-12 text-center">
         <h4>Espace disque</h4>
       
        <canvas id="fromageEspace"></canvas>
        </div>
     
</div>
{% endfor %}
<script src="js/camembert.js"></script>